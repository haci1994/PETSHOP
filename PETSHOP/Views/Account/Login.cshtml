@model LoginViewModel
<div class="tab-pane fade active show" id="nav-sign-in" role="tabpanel"
     aria-labelledby="nav-sign-in-tab">
    <div class="col-lg-8 offset-lg-2 mt-5">

       <form method="post" class="form-group flex-wrap ">
            <div class="form-input col-lg-6 my-4 m-auto">

                <input asp-for="Username"
                       placeholder="Enter username" class="form-control mb-3 p-4">

                <input asp-for="Password" placeholder="Enter password"
                       class="form-control mb-3 p-4" aria-describedby="passwordHelpBlock">

                <label class="py-3 d-flex flex-wrap justify-content-between">
                    <div>
                        <input asp-for="RememberMe" type="checkbox" class="d-inline">
                        <span class="label-body ">Remember Me</span>
                    </div>
                    <div id="passwordHelpBlock" class="form-text ">
                        <a asp-controller="Account" asp-action="Register" class="text-primary  fw-bold"> Register</a>
                    </div>
                    <div id="passwordHelpBlock" class="form-text ">
                        <a href="#" class="fw-bold"> Forgot Password?</a>
                    </div>
                </label>
                <div asp-validation-summary="All"></div>
                <div class="d-grid my-3">
                    <button type="submit" class="btn btn-dark btn-lg rounded-1">Log In</button>
                </div>

            </div>
        </form>

    </div>

</div>